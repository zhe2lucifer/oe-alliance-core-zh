+				}
+				ShowPVRChannelInfo();
+				return true;
+			}
+		}
+		break;
+		case ACTION_MOVE_UP:
+		case ACTION_NEXT_ITEM:
+		case ACTION_CHANNEL_UP:
+		{
+			CLog::Log(LOGNOTICE, "CHiPlayer::%s: ACTION_MOVE_UP", __FUNCTION__);
