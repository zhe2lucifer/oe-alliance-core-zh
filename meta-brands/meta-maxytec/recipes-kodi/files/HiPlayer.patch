+bool CHiPlayer::OpenFile(const CFileItem& file, const CPlayerOptions &options)
+{
+	if (IsPlaying())
+		CloseFile();
+	
+	m_bAbortRequest = false;
+	m_PlayerOptions = options;
+	m_item = file;
+	// Try to resolve the correct mime type
+	m_item.SetMimeTypeForInternetFile();
+	m_ready.Reset();
+	
+	Create();
+	
+	CLog::Log(LOGNOTICE, "CHiPlayer%s: CGUIDialogBusy::WaitOnEvent", __FUNCTION__);
+	CGUIDialogBusy::WaitOnEvent(m_ready, g_advancedSettings.m_videoBusyDialogDelay_ms, false);
+	// Playback might have been stopped due to some error
+	if (m_bStop || m_bAbortRequest) {
+		CLog::Log(LOGNOTICE, "CHiPlayer::%s: m_bStop=%s || m_bAbortRequest=%s", __FUNCTION__, m_bStop == true ? "true":"false" ,m_bAbortRequest == true ? "true":"false" ); 
+		CloseFile();
+		return false;
+	}
+	return true;
+}
