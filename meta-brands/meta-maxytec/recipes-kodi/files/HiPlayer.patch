+bool CHiPlayer::CloseFile(bool reopen)
+{
+	m_bAbortRequest = true;
+	
+	g_PVRManager.CloseStream();
+	m_VideoPlayerVideo->CloseStream();
+	
+	if(m_pInputStream)
+		m_pInputStream->Abort();
+	
+	/* wait for the thread to terminate */
+	StopThread(true);
+	
+	CLog::Log(LOGNOTICE, "CHiPlayer::%s: reopen=%s", __FUNCTION__, reopen == true ? "true":"false");
+
+	return true;
+}
