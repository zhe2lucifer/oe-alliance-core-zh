+bool CHiPlayerVideo::SeekTimeRelative(int64_t iTime)
+{
+	int64_t abstime = GetTime() + iTime;
+	
+	CLog::Log(LOGNOTICE, "CHiPlayerVideo::%s: iTime=%lld abstime=%d", __FUNCTION__, iTime, abstime);
+
+	if (abstime >= 0)
+	{
+		SeekTime(abstime);
+	}
+	return true;
+}
